#!/bin/bash

# Configuration
stp="5%"
sta=$(pactl list sinks | grep 'Mute:' | sed -n 2p | grep -o "yes")

# Set volume
set="pactl set-sink-volume 1"
mut="pactl set-sink-mute 1"

case "$1" in  
	"up")
		$set +$stp
		;;
	"down")
		$set -$stp
		;;
	"mute")
		$mut toggle
		if [[ -n $sta ]]; then
			notify-send "Sound unmuted"
		else
			notify-send "Sound muted"
		fi
		exit 0
		;;
esac

# Notify current volume
vol="$(pactl list sinks | grep "Volume" | sed -n 3p | awk '{print $5}')"

notify-send "Volume $vol"
exit 0  
