#!/bin/bash

# Configure
stp="10"
blv=$(xbacklight | grep -o "[0-9]*" | sed -n "1p")

# Execute

case "$1" in
	"up")
		xbacklight -inc $stp
		;;
	"down")
		if [ $blv -gt $stp ]; then
			xbacklight -dec $stp
		fi
		;;
	*)
		echo "Unkown option \"$1\""
		exit 1
		;;
esac

blv=$(xbacklight | grep -o "[0-9]*" | sed -n "1p")
blv=$(expr $blv + $(expr 10 - $(expr $blv % 10)))
notify-send "Brightness $blv%"
