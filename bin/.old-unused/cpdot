#!/bin/bash
#
# cpdot - copy dotfiles to a git directory
# sorbet, https://github.com/Sorebit

# Dotfiles folder
dot="$HOME/Documents/Git/dotfiles"
# Sublime text user configuration files
subl=".config/sublime-text-3/Packages/User"
suse="*.sublime-settings"
keys="Default (Linux).sublime-keymap"
pack="Package Control.sublime-settings"
# Zsh theme
them=".oh-my-zsh/themes/sorbet.zsh-theme"
# Wallpaper
wall=".wallpaper.png"

# Copy dotfiles
cp -r $HOME/.vim/*           $dot/.vim
cp $HOME/.vimrc              $dot/.vimrc
cp $HOME/$them               $dot/$them
cp $HOME/.zshrc              $dot/.zshrc
cp $HOME/.tmux.conf          $dot/.tmux.conf
# Copy Sublime Text 3 configs and remove unwanted
cp $HOME/$subl/$suse         $dot/$subl
cp $HOME/$subl/"$keys"       $dot/$subl/"$keys"
rm $dot/$subl/"$pack"
# Copy wallpaper
cp $HOME/$wall               $dot/$wall
# Dump gnome-terminal profile
term-prof dump $dot/gnome-terminal.conf
