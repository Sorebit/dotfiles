#!/bin/bash
#
# sesmgr - rofi and script based session manager
# sorbet, https://github.com/sorebit

# Get option from rofi
opt=$(echo -e "Logout\nShutdown\nReboot" | rofi -dmenu -p "Session:")

case $opt in
	Logout)
		bspc quit
		;;	
	Shutdown)
		shutdown now
		;;
	Reboot)
		reboot
		;;
	*)
		echo "Wrong argument"
		;;
esac
