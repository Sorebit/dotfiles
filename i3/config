# Window border colors      border      back    text
client.focused              $dark   $back	$white
client.unfocused            $dark	$back	$white
client.focused_inactive     $dark	$back	$white
client.urgent               $dark	$back	$white

# Gaps config
gap_size 15

# Window borders
for_window [class="^.*"] border pixel 0

# Startup programs
