# This is Git's per-user configuration file.
[core]
    excludesfile = ~/.gitignore_global
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
[filter "hawser"]
    clean = git hawser clean %f
    smudge = git hawser smudge %f
    required = true
[alias]
    puu = push -u origin head
    po = push --set-upstream origin
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr by %an)%Creset' --abbrev-commit --date=relative
[help]
    autocorrect = 1
[format]
    pretty = %C(yellow)%H%Creset -%C(green)%d%Creset %s %C(red)(%an, %cr)%Creset
[user]
    name = Sorebit
    email = tomulewicz.s@pm.me
[color]
    ui = true
[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
    path =
[mergetool "sourcetree"]
    cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true
[credential]
    helper = cache --timeout=2628000
[include]
    path = ~/.gitconfig.local
