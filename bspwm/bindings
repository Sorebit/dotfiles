# Quit bspwm
super + shift + e
	bspc quit

# Close window
super + q
	bspc window -c

# Make window float or fullscreen
super + {s, f}
	bspc window -t {floating, fullscreen}

# Switch focused window
super + {_,shift + }{Left, Down, Up, Right}
	bspc window -{f,s} {left, down, up, right}

# Change desktop
super + {1-4}
	bspc desktop -f ^{1-4}

# Move window to dekstop
super + shift + {1-4}
	bspc window -d ^{1-4}

# Focus a window using mouse
~button1
	bspc pointer -g focus

# Move and resize floats using mouse
super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

# Sound bindings

{XF86AudioMute, XF86AudioLowerVolume, XF86AudioRaiseVolume}
	sound {mute, down, up}

{XF86MonBrightnessDown, XF86MonBrightnessUp}
	brightness {down, up}

# Scrot desktop
super + Print
	screenshot

# Scrot selection
super + shift + Print
	screenshot -s

# Spawn urxvt
super + Return
	urxvt

# Spawn run menu
super + d
	run

# Spawn firefox
super + b
	firefox

# Reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd
