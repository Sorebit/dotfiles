# Quit bspwm
super + shift + e
	sesmgr

# Close window
super + q
	bspc window -c

# Make window float or fullscreen
super + {s, f, p}
	bspc window -t {floating, fullscreen, pseudo_tiled}

# Switch focused window
super + {_,shift + }{Left, Down, Up, Right}
	bspc window -{f,s} {left, down, up, right}

# Preselect the direction
super + ctrl + {Left, Down, Up, Right}
	bspc window -p {left, down, up, right}

# Cancel the preselection for the focused desktop
super + ctrl + Return
	bspc query -N -d | xargs -I id -n 1 bspc window id -p cancel

# Rotate the tree
super + r
	bspc desktop -R 90

# Change desktop
super + {1-5}
	bspc desktop -f ^{1-5}

# Move window to dekstop
super + shift + {1-5}
	bspc window -d ^{1-5}

# Focus a window using mouse
~button1
	bspc pointer -g focus

# Move and resize floats using mouse
super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

# Sound bindings
{XF86AudioMute, XF86AudioLowerVolume, XF86AudioRaiseVolume}
	sound {mute, down, up}

{XF86MonBrightnessDown, XF86MonBrightnessUp}
	brightness {down, up}

# Lock screen
super + l
	lock

# Scrot desktop
Print
	screenshot

# Scrot selection
super + Print
	screenshot -s

# Spawn urxvt
super + Return
	urxvtc

# Spawn run menu
super + d
	run -show run

# Spawn firefox
super + b
	firefox

# Reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd
