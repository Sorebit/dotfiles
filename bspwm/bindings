# Quit bspwm
super + shift + e
	sesmgr

# Close node
super + q
	bspc node -c

# Toggle node state
super + {p, shift + p, s, f}
    bspc node -t '~{tiled,pseudo_tiled,floating,fullscreen}'

# Switch focused node
super + {_,shift + }{Left, Down, Up, Right}
	bspc node -{f,s} {west, south, north, east}

# Preselect the direction
super + ctrl + {Left, Down, Up, Right}
	bspc node -p {west, south, north, east}

# Cancel the preselection for the focused desktop
super + ctrl + Return
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# Rotate the tree
super + r
	bspc node @/ -R 90

# Change desktop
super + {1-5}
	bspc desktop -f ^{1-5}

# Move node to dekstop
super + shift + {1-5}
	bspc node -d ^{1-5}

# Focus a node using mouse
~button1
	bspc pointer -g focus

# Move and resize floats using mouse
super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

# Sound bindings
{XF86AudioMute, XF86AudioLowerVolume, XF86AudioRaiseVolume}
	sound {mute, down, up}

{XF86MonBrightnessDown, XF86MonBrightnessUp}
	brightness {down, up}

# Lock screen
super + l
	lock

# Scrot desktop
Print
	screenshot

# Scrot selection
super + Print
	screenshot -s

# Spawn urxvt
super + Return
	urxvtc

# Spawn run menu
super + d
	rofi -show run

# Spawn firefox
super + b
	firefox

# Reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd
